programa Ej2TP5
procesos
  proceso juntarFlores(ES flores: numero)
  comenzar
    mientras HayFlorEnLaEsquina
      tomarFlor
      flores:= flores + 1
  fin
  proceso Barrera(E ID:numero)
  variables
    ok: boolean
  comenzar
    ok:= V
    si (ID =1)
      EnviarMensaje(ok, robot2)
      EnviarMensaje(ok, robot3)
      repetir 2
        RecibirMensaje(ok, *)
    sino
      si (ID =2)
        EnviarMensaje(ok, robot1)
        EnviarMensaje(ok, robot3)
        repetir 2
          RecibirMensaje(ok, *)
      sino
        EnviarMensaje(ok, robot1)
        EnviarMensaje(ok, robot2)
        repetir 2
          RecibirMensaje(ok, *)
  fin
  proceso depositarFlores(E flores: numero)
  comenzar
    repetir flores
      depositarFlor
  fin
  proceso irADepositar(E flores: numero; ES floresTotales: numero)
  variables
    aA,cA: numero
  comenzar
    aA:= PosAv
    cA:= PosCa
    BloquearEsquina(50,50)
    Pos(50,50)
    depositarFlores(flores)
    floresTotales:= floresTotales + flores
    Pos(aA, cA)
    LiberarEsquina(50,50)
  fin
areas
  a1: AreaP (1,1,100,1)
  a2: AreaP (1,2,100,2)
  a3: AreaP (1,3,100,3)
  aJ: AreaP(1,4,1,4)
  deposito: AreaC(50,50,50,50)
robots
  robot recolector
  variables
    flores,floresTotales, ID: numero
    ok: boolean
  comenzar 
    flores:= 0
    floresTotales:= 0
    derecha
    RecibirMensaje(ID, fiscalizador)
    repetir 9
      juntarFlores(flores) 
      mover 
    juntarFlores(flores) 
    irADepositar(flores, floresTotales)
    Barrera(ID)   
    repetir 9 
      flores:= 0
      repetir 10
        juntarFlores(flores)
        mover
      juntarFlores(flores)
      irADepositar(flores, floresTotales)
      Barrera(ID)
    EnviarMensaje(floresTotales, fiscalizador)
  fin
  robot fiscalizador
  variables
    flores, floresTotales, aA, cA: numero
  comenzar
    flores:= 0
    EnviarMensaje(1, robot1)
    EnviarMensaje(2, robot2)
    EnviarMensaje(3, robot3) 
    repetir 3 
      RecibirMensaje(flores, *)
      floresTotales:= floresTotales + flores
    aA:= PosAv
    cA:= PosCa
    BloquearEsquina(50,50)
    Pos(50,50)
    repetir floresTotales
      tomarFlor
    Pos(aA,cA)
    LiberarEsquina(50,50)
    Informar("Se junt√≥ la siguiente cantidad de flores ", floresTotales)
  fin
variables 
  robot1, robot2, robot3: recolector
  fiscalizador: fiscalizador
comenzar
  AsignarArea(robot1, a1)
  AsignarArea(robot2, a2)
  AsignarArea(robot3, a3)
  AsignarArea(fiscalizador, aJ)
  AsignarArea(robot1, deposito)
  AsignarArea(robot2, deposito)
  AsignarArea(robot3, deposito)
  AsignarArea(fiscalizador, deposito)
  Iniciar(robot1, 1,1)
  Iniciar(robot2, 1,2)
  Iniciar(robot3, 1,3)
  Iniciar(fiscalizador, 1,4)
fin