programa ejemplo
procesos
  proceso tomarPapeles(ES papeles: numero)
  comenzar
    mientras HayPapelEnLaEsquina
      tomarPapel
      papeles:= papeles +1
  fin
  proceso tomarFlores(ES flores: numero)
  comenzar 
    mientras HayFlorEnLaEsquina
      tomarFlor
      flores:= flores +1
  fin
  proceso recorrerJuntandoPapeles(ES papeles: numero)
  comenzar
    repetir 9
      tomarPapeles(papeles)
      mover
    tomarPapeles(papeles)
  fin
  proceso recorrerJuntandoFlores(ES flores: numero)
  comenzar 
    repetir 9
      tomarFlores(flores)
      mover
    tomarFlores(flores)
  fin
areas
  A: AreaC (1,1,100,1)
  B: AreaC (1,5,100,5)
robots
  robot rA1
  variables
    papeles: numero 
  comenzar
    derecha
    recorrerJuntandoPapeles(papeles) 
    EnviarMensaje(papeles, robotA2)
    RecibirMensaje(papeles, robotA2)
    Pos(PosAv+11, PosCa)
    recorrerJuntandoPapeles(papeles)
    EnviarMensaje(papeles, robotA2)   
  fin
  robot rA2
  variables 
    papeles: numero  
  comenzar 
    RecibirMensaje(papeles, robotA1)
    derecha
    recorrerJuntandoPapeles(papeles)
    EnviarMensaje(papeles, robotA1)
    RecibirMensaje(papeles, robotA1)
    Pos(PosAv+11, PosCa)
    recorrerJuntandoPapeles(papeles)
    Informar(papeles)
  fin 
  robot rB1
  variables
    flores: numero 
  comenzar 
    derecha
    recorrerJuntandoFlores(flores) 
    EnviarMensaje(flores, robotB2)
    RecibirMensaje(flores, robotB2)
    Pos(PosAv+11, PosCa)
    recorrerJuntandoFlores(flores)
    EnviarMensaje(flores, robotB2)   
  fin 
  robot rB2 
  variables  
    flores: numero  
  comenzar  
    RecibirMensaje(flores, robotB1)
    derecha
    recorrerJuntandoFlores(flores)
    EnviarMensaje(flores, robotB1)
    RecibirMensaje(flores, robotB1)
    Pos(PosAv+11, PosCa)
    recorrerJuntandoFlores(flores)
    Informar(flores)
  fin 
variables
  robotA1: rA1
  robotA2: rA2
  robotB1: rB1
  robotB2: rB2
comenzar
  AsignarArea(robotA1, A)
  AsignarArea(robotA2, A)
  AsignarArea(robotB1, B)
  AsignarArea(robotB2, B)
  Iniciar(robotA1,1,1)
  Iniciar(robotA2, 11,1)
  Iniciar(robotB1, 1,5)
  Iniciar(robotB2, 11,5)
fin